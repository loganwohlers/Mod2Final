<h4><%= @bracket.name %> </h4>

<% teams=@bracket.order_teams %>
<% teams.each do |item| %>
    Team: <%= item.name%> Power Score: <%= item.power_score.round(4) %> <br>
<%end%>


<% final_bracket=@bracket.whole_bracket%>

SEEDED: <br>
<%final_bracket.each do |s| %>
<%= s.name %> Power: <%=s.power_score.round(4) %>   SEED: <%= teams.index(s)+1 %>
<br>
<% end %>


<h3>Simulating Bracket........</h3>
<% for i in 1..(Math.log2(final_bracket.length))%>
    <h4>Round: <%= i %></h4> <br>
    <% for j in 1..(final_bracket.length/2)  %>
        Game <%= j %> <br>
        <%curr_teams=final_bracket.shift(2)%>
        <% t1=curr_teams[0] %>
        <% t2=curr_teams[1] %>
        T1: <%= t1.name %> (<%= teams.index(t1)+1 %>) vs T2: <%= t2.name %>(<%= teams.index(t2)+1 %>)<br>
        <% winner= @bracket.play_game(t1, t2)%>
        <%final_bracket.push(curr_teams[winner])%>
        Winner: <%=curr_teams[winner].name%> <br>
    <% end %>
<% end %>
