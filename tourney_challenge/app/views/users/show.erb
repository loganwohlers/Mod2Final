

<div class="container">


<div class="row">
  <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6 mx-auto mt-5 ">
     <div class="well profile">
          <div class="col-sm-12">
              <div class="col-xs-10 col-sm-8 text-center">
                  <img src="https://www.americaninno.com/wp-content/uploads/wpallimport/files/1/2014/03/March-Madness-Bracket.jpg" class="img-fluid" alt="basketball icon"><br />
                  <h2 class="text-uppercase"><%= @user.username %></h2>



              </div>
          </div>




          </div>
          <div class="mt-3 class=text-center">
            <p class=" text-capitalize" class="text-center text-capitalize"><%=@user.username%>'s Team(s)
              <hr>
              <% @user.teams.each do |t| %>
                      <p class="teamTag"><%=link_to t.name, team_path(t)%></p>
              <% end %>
            </p>
          </div>
          <div class="mt-4 class=text-center">
            <p class=" text-capitalize" class="text-center text-capitalize"><%=@user.username%>'s Bracket(s)
              <hr>
              <% @user.brackets.each do |t| %>
                      <p class="bracketTag"><%=link_to t.name, bracket_path(t)%></p>
              <% end %>
            </p>
          </div>

     </div>
  </div>
</div>
</div>
