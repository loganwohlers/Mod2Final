

<div class="container">


<div class="col-12 mt-5">


<div class="row">
    <% @teams.each do |item| %>
    <div class="card col-3 wow animated fadeInUp">
      <a href="<%= team_path(item)%>"><img class="card-img-top img-fluid" src="https://images.unsplash.com/photo-1484482340112-e1e2682b4856?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1055&q=80" alt="Card image cap"></a>
      <div class="card-body">
        <h4 class="card-title text-uppercase"><i class="fas fa-basketball-ball wow animated fadeIn" data-wow-duration="2s"></i> <%= link_to item.name, team_path(item)%></h4>
        <p class="card-text">
          <%= item.history %>
        </p>
        <hr>
        <p class="card-text">
          Offensive Rating:<%= item.offensive_score.round(3) %>
        </p>
        <p class="card-text">
          Defensive Rating: <%= item.defensive_score.round(3) %>
        </p>
        <p class="card-text">
          Team Spirit: <%= item.team_spirit.round(3) %>
        </p>
        <p class="card-text">
          Total Rating: <%= item.power_score.round(3) %>
        </p>
        <hr>
        <h4 class="btn btn-outline-dark text-uppercase"><%= link_to item.name, team_path(item)%></h4>
    </div>

  </div>
<%end%>

  </div>
</div>
  </div>
