<style>
@import url(http://fonts.googleapis.com/css?family=Lato:400,700);
body
{
    font-family: 'Lato', 'sans-serif';
    }
.profile
{
    min-height: 355px;
    display: inline-block;
    }
figcaption.ratings
{
    margin-top:20px;
    }
figcaption.ratings a
{
    color:#f1c40f;
    font-size:11px;
    }
figcaption.ratings a:hover
{
    color:#f39c12;
    text-decoration:none;
    }
.divider
{
    border-top:1px solid rgba(0,0,0,0.1);
    }
.emphasis
{
    border-top: 4px solid transparent;
    }
.emphasis:hover
{
    border-top: 4px solid #1abc9c;
    }
.emphasis h2
{
    margin-bottom:0;
    }
span.tags
{
    background: #1abc9c;
    border-radius: 2px;
    color: #f5f5f5;
    font-weight: bold;
    padding: 2px 4px;
    }
</style>

<div class="container">
	<div class="row">
		<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6 mx-auto mt-5 ">
    	 <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-10 col-sm-8 text-center border border-info p-3">
                    <img  src="<%= @athlete.image %>"><br />
                    <h2><%= @athlete.name %></h2>
                    <p><strong>Age: </strong> <%= @athlete.age %> </p>
                    <p><strong>School: </strong> <%= @athlete.school %> </p>
                    <p><strong>College Knowledge: </strong> <%= @athlete.bio %></p> <br>

                    <div class="col-12">
                      <div class="row text-center">
                        <div class="col-4">
                          <h2><strong> <%= @athlete.offense.round(3) %> </strong></h2>
                          <p><small>Offensive Prowess</small></p>
                        </div>
                        <div class="col-4">
                          <h2><strong><%= @athlete.defense.round(3) %></strong></h2>
                          <p><small>Defensive Prowess</small></p>
                        </div>
                        <div class="col-4">
                          <h2><strong><%=@athlete.teams.length%></strong></h2>
                          <p><small>team(s)</small></p>
                        </div>
                      </div>


                    </div>
                </div>
            </div>




            </div>
            <div class="mt-3 class=text-center">
                <p class="p-4" class="text-center"><%=@athlete.name%>'s Team(s)
                <% @athlete.teams.each do |t| %>
                        <%=link_to t.name, team_path(t)%>
                <% end %>
                    </p>
                </div>
    	 </div>
		</div>
	</div>
</div>
